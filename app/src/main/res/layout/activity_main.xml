<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_titulo"
        android:layout_width="314dp"
        android:layout_height="66dp"
        android:layout_marginTop="48dp"
        android:alpha="0.7"
        android:autoLink="all"
        android:background="@color/white"
        android:ems="10"
        android:hint="@string/titulo_articulo"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edt_resumen"
        android:layout_width="309dp"
        android:layout_height="104dp"
        android:layout_marginTop="32dp"
        android:alpha="0.7"
        android:autoLink="all"
        android:background="@color/white"
        android:ems="10"
        android:gravity="start|fill_horizontal"
        android:hint="@string/resumen"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="10sp"
        android:padding="5dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_titulo"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edt_texto"
        android:layout_width="309dp"
        android:layout_height="160dp"
        android:layout_marginTop="32dp"
        android:alpha="0.7"
        android:autoLink="all"
        android:background="@color/white"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/texto_de_articulo"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="10sp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_resumen"
        android:autofillHints="" />

    <Button
        android:id="@+id/bt_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:onClick="crear"
        android:text="@string/crear_articulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_texto" />

</androidx.constraintlayout.widget.ConstraintLayout>